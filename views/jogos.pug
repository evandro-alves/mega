extends layout.pug 
block content 
    h2 Jogos
    a(href='#' class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalJogo") 
        i(class="fas fa-plus") &nbsp
        span Novo Jogo
    div.row
        div.col
            table.table
                thead
                    tr
                        th(scope='col') Concurso
                        th(scope='col') Data
                        th(scope='col') Jogadores                       
                        th(scope='col') Apostas 
                        th(scope='col') &nbsp
                tbody 
                    each jogo in jogos
                        tr 
                            td=jogo.concurso
                            td=jogo.dataCriacao
                            td=jogo.totalJogadores 
                            td=jogo.totalApostas     
                            td
                                button(class="btn btn-primary btn-detalhar" type="button" role="button")
                                    i.fas.fa-magnifying-glass-plus &nbsp 
    div.modal#modalJogo
        div.modal-dialog.modal-dialog-centered
            div.modal-content
                div.modal-header
                    h5.modal-title Novo Jogo 
                    button(type='button' class='btn-close' data-bs-dismiss='modal')
                div.modal-body
                    form#frmNovoConcurso(action='/jogos/novo' method='post')
                        div.mb-2
                            label.form-label(for='txtConcurso') Concurso
                            input.form-control#txtConcurso(type='number' required)
                        div.mb-2.text-center
                            button.btn.btn-success.me-1(type='submit')
                                i.fas.fa-save &nbsp 
                                span Adicinonar 
                            button.btn.btn-danger(type='button' data-bs-dismiss='modal')
                                i.fas.fa-times &nbsp 
                                span Cancelar
                div.modal-footer.d-none
                    div.alert#modal &nbsp
    script(src='/js/pages/jogos.js')
